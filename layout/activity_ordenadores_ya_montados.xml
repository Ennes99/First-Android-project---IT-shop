<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".OrdenadoresYaMontados">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <Button
            android:id="@+id/volver"
            android:layout_width="38dp"
            android:layout_height="48dp"
            android:background="@drawable/flecha_atras"/>

    </com.google.android.material.appbar.AppBarLayout>


    <TextView
        android:id="@+id/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escoja su ordenador:" />

    <TextView
        android:id="@+id/cuantos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/gridView_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecView"
            android:layout_width="match_parent"
            android:layout_height="460dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/pie_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#C9C3C3"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/sorteo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="sorteo de \nperifÃ©ricos"/>

        <TextView
            android:id="@+id/dinerocompra"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:text=""/>

        <Button
            android:id="@+id/comprar_yamontados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="COMPRAR"/>

    </LinearLayout>

</LinearLayout>