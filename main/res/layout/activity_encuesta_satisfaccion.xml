<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/encuesta_sat_layout"
    tools:context=".EncuestaSatisfaccion">



    <TextView
        android:id="@+id/pregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cómo supiste de Primera Informática?"
        android:layout_marginTop="20dp" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/internet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Internet"
        android:layout_marginTop="10dp"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/redes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leído en redes"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/amigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Un amigo"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tv"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/otro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Otro"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/campotexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/queotros"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="¿Cuáles otros?"
            android:text=""
            android:visibility="gone"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Déjanos alguna sugerencia:"/>

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"
        android:background="#CCF7E1"
        android:inputType="text|textMultiLine"
        android:gravity="top"/>


        <Button
            android:id="@+id/enviarencuesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="20dp"
            android:text="ENVIAR"/>

</LinearLayout>